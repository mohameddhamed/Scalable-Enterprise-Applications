<?xml version="1.0" encoding="UTF-8"?>
<persistence version="3.0" xmlns="https://jakarta.ee/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">
  <persistence-unit name="testpu" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <!-- Entity classes -->
    <class>entities.Employee</class>
    <class>entities.ParkingLot</class>
    <class>entities.Department</class>
    <class>entities.Meeting</class>
    <properties>
      <!-- JDBC Connection options -->
      <property name="jakarta.persistence.jdbc.url" value="jdbc:derby://localhost/testdb;create=true"/>
      <property name="jakarta.persistence.jdbc.driver" value="org.apache.derby.jdbc.EmbeddedDriver"/>
      <property name="jakarta.persistence.jdbc.user" value="APP"/>
      <property name="jakarta.persistence.jdbc.password" value="APP"/>
      <!-- Always drop and (re-)create the tables -->
      <property name="eclipselink.ddl-generation" value="drop-and-create-tables"/>
      <!-- Generate and run the schema creation script -->
      <property name="eclipselink.ddl-generation.output-mode" value="both"/>
      <!-- Save it to create.sql in the current directory -->
      <property name="eclipselink.create-ddl-jdbc-file-name" value="create.sql"/>
      <!-- Save it to drop.sql in the current directory -->
      <property name="eclipselink.drop-ddl-jdbc-file-name" value="drop.sql"/>
    </properties>
  </persistence-unit>
</persistence>
